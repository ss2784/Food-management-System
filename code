-- Creating necessary tables
CREATE TABLE MENU (
 Mrid INT,
 Dishname VARCHAR(100)
);
CREATE TABLE RESTAURANT (
 Rid INT PRIMARY KEY,
 Rname VARCHAR(100),
 Rphone VARCHAR(12),
 Raddress VARCHAR(200),
 Cuisine VARCHAR(50),
 Rating NUMERIC(2, 1),
 Main_rid INT
);
CREATE TABLE ORDERS (
 Ocid INT,
 Oid_ INT
);
CREATE TABLE COUPON (
 Code VARCHAR(12) PRIMARY KEY,
 Maxdisc INT NOT NULL,
 Exp_date TIMESTAMP NOT NULL,
 Minord INT NOT NULL
);
CREATE TABLE ORDER_ (
 Oid_ INT PRIMARY KEY,
 Odid INT,
 Orid INT
);
CREATE TABLE DELIVERY_PERSON (
 Did INT PRIMARY KEY,
 Dfname VARCHAR(50),
 Dlname VARCHAR(50),
 Drating NUMERIC(2, 1)
);
CREATE TABLE CUSTOMER (
 Cid INT PRIMARY KEY,
 Fname VARCHAR(50),
 Lname VARCHAR(50),
 Cphone VARCHAR(15),
 CAddress VARCHAR(200),
 Email VARCHAR(100)
);
CREATE TABLE MAKES (
 Mcid INT,
 Moid INT
);
CREATE TABLE ITEMS (
 Ioid INT,
 Iprice FLOAT
);
CREATE TABLE TRANSACTION_ (
 Tid INT PRIMARY KEY,
 Amount FLOAT,
 Mode VARCHAR(10)
);
CREATE TABLE CITEMS (
 Ciprice FLOAT,
 Ccart_id INT,
 ciqty INT DEFAULT 1
);
CREATE TABLE CART (
 Cart_id INT PRIMARY KEY,
 total_price FLOAT DEFAULT 0
);
-- Inserting sample data
INSERT INTO MENU (Mrid, Dishname) VALUES (1, 'Pasta'), (1, 'Pizza'), (2, 'Burger');
